@page "/authors"
@inject NavigationManager NavigationManager

<h3>Authors</h3>
<hr />

<a href="authors/authordetail/11"> Z.Z.Tun</a>
<div>
    @foreach (Author author in AuthorList)
    {
        <div class="col-12 row">
            <div class="col-2">
                <NavLink href=@string.Format("/author/authordetail/{0}",@author.AuthorId)>
                    @author.AuthorId 
                </NavLink>
            </div>
            <div class="col-2">@author.FirstName @author.LastName</div>
        </div>
    }
</div>
<br />
<button class="btn btn-primary" @onclick="Navigate">Click me</button>
@code {
    public list<Author> AuthorList { get; set; }
    public AuthorService authorService { get; set;}
    protected override void OnInitialized()
    {
        authorService = new AuthorService();
        AuthorList = authorService.GetAuthors();
    }
}
